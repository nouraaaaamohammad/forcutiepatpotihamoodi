<script>
  // First Passcode
  const firstPasscode = "162009";
  function checkPasscode() {
    const input = document.getElementById("passcodeInput").value;
    if(input === firstPasscode) {
      document.getElementById("mainMenu").style.display = "block";
      document.getElementById("passcodeInput").style.display = "none";
      document.querySelector("button").style.display = "none";
    } else {
      const wrong = document.getElementById("wrongPass");
      wrong.style.display = "block";
      setTimeout(() => { wrong.style.display = "none"; }, 5000);
    }
  }

  // Second Passcode for album
  function checkSecondPasscode() {
    let secondPass = prompt("Enter the secret passcode to see the album:");
    if(secondPass && secondPass.toLowerCase() === "i wanna see my sexy girlfriend") {
      alert("yay You can see the album üòò");
      document.getElementById("album").style.display = "block";
    } else {
      alert('that's wrong my love try again, Hint: you should say "i wanna see my..."');
    }
  }

  // Love Quiz
  function loveQuiz() {
    const questions = [
      { question: "What is my favorite color?", options: ["pink", "blue", "white", "purple"], answer: "white" },
      { question: "Which snack do I love?", options: ["chocolate", "chips", "ice cream", "cookies", "you"], answer: "you" },
      { question: "What color is my hair?", options: ["dark brown", "light brown", "red"], answer: "light brown" },
      { question: "What‚Äôs my favorite song?", options: ["intro(end of the world)", "anyone else but you", "good looking"], answer: "anyone else but you" },
      { question: "Do you like me?", options: ["yes", "opposite of no", "oui", "si"], answer: "yes" }
    ];
    let score = 0;
    for(let q of questions) {
      const userAnswer = prompt(`${q.question}\nOptions: ${q.options.join(", ")}`);
      if(userAnswer && userAnswer.toLowerCase() === q.answer.toLowerCase()) {
        alert("correct üòò");
        score++;
      } else {
        alert(`wrong haha the answer was "${q.answer}"`);
      }
    }
    alert(`quiz finished you got ${score} out of ${questions.length} ‚ù§Ô∏è\nHope you know me well üòè`);
  }

  // Album Lightbox
  function openLightbox(img) {
    document.querySelector("#lightbox img").src = img.src;
    document.getElementById("lightbox").style.display = "flex";
  }
  function closeLightbox() {
    document.getElementById("lightbox").style.display = "none";
  }
</script>

